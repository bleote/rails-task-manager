<%= form_with model: @task do |task| %>
  <%= task.label :title %>
  <%= task.text_field :title %>
  <%= task.label :details %>
  <%= task.text_field :details %>
  <%= task.label :completed %>
  <%= task.check_box :completed, {}, true, false%>
  <%= task.submit %>
<% end %>

<%= link_to "Back to all tasks", tasks_path %>
